<p id="notice"><%= notice %></p>

<p>
  <strong>商品名:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>コメント:</strong>
  <%= @post.body %>
</p>
<p>
  <strong>ニックネーム:</strong>
  <%= @post.user.nickname %>

</p>

<% if current_user.id == @post.user_id %>
      <%= link_to '編集', edit_post_path(@post) %> |
      <%= link_to '削除', @post, method: :delete, data: { confirm: '本当に消しますが?' } %> |
    <% end %>
    <%= link_to '戻る', posts_path %>


